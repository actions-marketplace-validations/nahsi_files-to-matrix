{
  "name": "files-to-matrix",
  "version": "1.0.0",
  "description": "Generate github action build matrix from a list of files",
  "main": "lib/main.js",
  "scripts": {
    "format": "deno fmt src/*.ts README.md",
    "lint": "deno lint/*.ts",
    "test": "jest",
    "build": "tsc && ncc build",
    "action": "npm run build && act pull_request"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nahsi/files-to-matrix.git"
  },
  "author": "Anatoly Laskaris",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nahsi/files-to-matrix/issues"
  },
  "homepage": "https://github.com/nahsi/files-to-matrix#readme",
  "dependencies": {
    "@actions/core": "^1.6.0"
  },
  "devDependencies": {
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.6",
    "@vercel/ncc": "^0.33.1",
    "jest": "^27.4.5",
    "ts-jest": "^27.1.2",
    "typescript": "^4.5.4"
  }
}
